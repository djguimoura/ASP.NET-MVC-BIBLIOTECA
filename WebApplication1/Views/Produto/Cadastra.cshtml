@model K19.Models.Produto

@{
    ViewBag.Title = "Cadastra";
}


<h2>Cadastra</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true)

        @*@Html.EditorFor(m => m.ProdutoID)*@

        <div class="form-group">
            <div>@Html.LabelFor(m => m.Nome)</div>
            @Html.EditorFor(m => m.Nome, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Nome)
        </div>

        <div class="form-group">
            <div>@Html.LabelFor(m => m.Descricao)</div>
            @Html.EditorFor(m => m.Descricao, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Descricao)
        </div>

        <div class="form-group">
            <div>@Html.LabelFor(m => m.Preco)</div>
            @Html.EditorFor(m => m.Preco, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Preco)
        </div>
        <div class="form-group">
            <div><input type="submit" value="create" class="btn btn-default" /></div>
        </div>
        <!--PARA VALIDAÇÃO DO LADO DO CLIENTE-->
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
    </div>
}

<div>
    @Html.ActionLink("Voltar à lista", "Lista", new { @style= "text-decoration:none;" })
</div>

